{% extends 'base.html.twig' %}

{% block title %}Candidate index{% endblock %}

{% block body %}
    <h1>Candidate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Adress</th>
                <th>Country</th>
                <th>Nationality</th>
                <th>HavePassport</th>
                <th>Passport</th>
                <th>Curriculum</th>
                <th>Picture</th>
                <th>Location</th>
                <th>DateOfBirth</th>
                <th>PlaceOfBirth</th>
                <th>IsAvailable</th>
                <th>Sector</th>
                <th>Experience</th>
                <th>Description</th>
                <th>Note</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>File</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidate in candidates %}
            <tr>
                <td>{{ candidate.id }}</td>
                <td>{{ candidate.gender }}</td>
                <td>{{ candidate.firstname }}</td>
                <td>{{ candidate.lastname }}</td>
                <td>{{ candidate.adress }}</td>
                <td>{{ candidate.country }}</td>
                <td>{{ candidate.nationality }}</td>
                <td>{{ candidate.havePassport ? 'Yes' : 'No' }}</td>
                <td>{{ candidate.passport }}</td>
                <td>{{ candidate.curriculum }}</td>
                <td>{{ candidate.picture }}</td>
                <td>{{ candidate.location }}</td>
                <td>{{ candidate.dateOfBirth ? candidate.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ candidate.placeOfBirth }}</td>
                <td>{{ candidate.isAvailable ? 'Yes' : 'No' }}</td>
                <td>{{ candidate.sector }}</td>
                <td>{{ candidate.experience }}</td>
                <td>{{ candidate.description }}</td>
                <td>{{ candidate.note }}</td>
                <td>{{ candidate.createdAt ? candidate.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ candidate.updatedAt ? candidate.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ candidate.deletedAt ? candidate.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ candidate.file }}</td>
                <td>
                    <a href="{{ path('app_candidate_show', {'id': candidate.id}) }}">show</a>
                    <a href="{{ path('app_candidate_edit', {'id': candidate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="24">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_candidate_new') }}">Create new</a>
{% endblock %}
